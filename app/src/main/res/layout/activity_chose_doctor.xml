                    tools:text="روانپزشک"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/textView_name4"
                    app:layout_constraintHorizontal_bias="0.489"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="@+id/textView_name4"
                    app:layout_constraintTop_toBottomOf="@+id/textView_name4" />

                <Button
                    android:id="@+id/button_see4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#059F90"
                    android:text="مشاهده"
                    app:layout_constraintBottom_toBottomOf="parent"
